<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#fae1dd"
    tools:context=".AnswerPage">

    <Button
        android:id="@+id/backButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        android:enabled="false"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionNumberTracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:text="Question x/y"
        android:textColor="#4a4e69"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Current Question"
        android:textColor="#4a4e69"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/correctAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Correct Answer"
        android:layout_marginTop="20dp"
        android:textColor="#0F0F0F"
        android:textSize="20sp"
        android:background="#ccd5ae"
        app:layout_constraintTop_toBottomOf="@+id/currentQuestion"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/myAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ff758f"
        android:padding="8dp"
        android:text="My Answer"
        android:textColor="#0F0F0F"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/correctAnswer"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/correctAnswerTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="x/y Questions Correct"
        android:layout_marginTop="24dp"
        android:textColor="#4a4e69"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/myAnswer"
        tools:layout_editor_absoluteX="-15dp" />

    <Button
        android:id="@+id/nextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9c89b8"
        android:text="Next Question"
        android:textColor="#ffffff"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout >